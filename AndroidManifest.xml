<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.vacuumhead.bangalore"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="15" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity            
            android:name=".CalculateFareActivity"
            android:label="@string/title_activity_calculate_fare" 
            android:theme="@android:style/Theme.Dialog">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>    
         </activity>
         <activity            
            android:name=".TokenUserFareActivity"
            android:label="@string/title_token_user_fare"   
            android:theme="@android:style/Theme.Dialog"
            android:textSize="40sp">
        </activity>
        <activity            
            android:name=".VarshikUserFareActivity"
            android:label="@string/title_varshik_user_fare"   
            android:theme="@android:style/Theme.Dialog"
            android:textSize="40sp">
         </activity>
         <activity            
            android:name="com.vacuumhead.bangalore.ViewMapActivity"
            android:label="@string/title_activity_view_menu" 
            android:textSize="40sp">
         </activity>
    </application>

</manifest>