<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="20dip"
    android:background="@color/grey" >
 <TableLayout android:layout_width="wrap_content"
     android:layout_height="wrap_content" >
  <TableRow>
   <!--   <TextView
      android:layout_height="wrap_content"
      android:layout_width="wrap_content"
      android:text="@string/sourceStart"
      android:textColor="@color/Silver"
      android:textStyle="bold"
      android:layout_marginRight="10dip"
      android:textSize="20sp" /> -->
   <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/source"/>
   </TableRow> 
   <Spinner
    android:id="@+id/source_spinner"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="35dip" />
   
  <TableRow> 
   <!--  <TextView
        android:layout_height="wrap_content"
      android:layout_width="wrap_content"
      android:text="@string/destinationStart"
      android:textStyle="bold"
      android:textColor="@color/Silver"
      android:textSize="20sp"
      android:layout_marginRight="10dip"/> -->
   <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/destination" />
   </TableRow>
 <Spinner
    android:id="@+id/destination_spinner"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dip"/>	

 <Button
      android:id="@+id/fareBeginbutton"
      android:layout_height="wrap_content"
      android:layout_width="wrap_content"
      android:background="@drawable/button6"
      android:layout_marginLeft="80dp"
      android:layout_marginRight="80dp"
      android:src="@drawable/farecalc"
      android:layout_marginBottom="20dip" />
 

 <RelativeLayout android:layout_height="fill_parent" android:layout_width="fill_parent" android:layout_weight="1">
        <LinearLayout  android:orientation="horizontal" android:layout_height="fill_parent" android:layout_width="wrap_content" android:weightSum="2">
     <Button
     android:id="@+id/viewOnMapButton"
     android:layout_width="wrap_content" android:layout_height="wrap_content" 
        android:layout_marginLeft="5dp"
        android:layout_gravity="left"
        android:layout_weight="1.0"
      android:background="@drawable/button7"
      android:layout_toLeftOf="@+id/view"
      android:src="@drawable/mapcalc"/>
     
     <View
        android:id="@+id/view"
        android:layout_width="25dp"
        android:layout_height="1dp"
        android:layout_centerHorizontal="true" />
     
 <Button
     android:id="@+id/intermediateStationsButton"
     android:layout_width="wrap_content" android:layout_height="wrap_content" 
        android:layout_marginRight="5dp"
        android:layout_gravity="right"
        android:layout_weight="1.0"
       android:background="@drawable/button8"
       android:layout_toRightOf="@+id/view"
      android:src="@drawable/intercalc" />
     
       </LinearLayout> 
    </RelativeLayout>
    
 
 </TableLayout>
</ScrollView>


